# =============================================================================
# CONFIGURAÇÕES DE PRODUÇÃO - SaaS Project
# =============================================================================
# IMPORTANTE: Configure todas as variáveis antes do deploy em produção
# Mantenha este arquivo seguro e nunca o commite no repositório

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
DJANGO_SECRET_KEY=ALTERE-ESTA-CHAVE-SECRETA-MUITO-FORTE-AQUI-COM-50-CARACTERES
DJANGO_DEBUG=False
DJANGO_ENVIRONMENT=production

# Hosts permitidos (adicione seu domínio)
ALLOWED_HOSTS=seu-dominio.com,www.seu-dominio.com

# URLs e domínios
SITE_URL=https://seu-dominio.com
SITE_NAME=SaaS Project

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=saas_prod
DB_USER=saas_user
DB_PASSWORD=ALTERE-ESTA-SENHA-DO-BANCO-MUITO-FORTE
DB_HOST=postgres
DB_PORT=5432

# =============================================================================
# REDIS SETTINGS
# =============================================================================
REDIS_URL=redis://redis:6379/0
CACHE_URL=redis://redis:6379/1
SESSION_REDIS_URL=redis://redis:6379/2

# =============================================================================
# EMAIL SETTINGS
# =============================================================================
# Configure com seu provedor de email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-de-app-do-gmail
DEFAULT_FROM_EMAIL=noreply@seu-dominio.com
SERVER_EMAIL=server@seu-dominio.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# SSL/HTTPS (configurado pelo Nginx Proxy Manager)
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER_NAME=HTTP_X_FORWARDED_PROTO
SECURE_PROXY_SSL_HEADER_VALUE=https
USE_TLS=True

# HSTS (HTTP Strict Transport Security)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Cookies seguros
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_HTTPONLY=True

# Content Security Policy
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# =============================================================================
# STATIC AND MEDIA FILES
# =============================================================================
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
LOG_DIR=/app/logs

# =============================================================================
# JWT SETTINGS
# =============================================================================
JWT_SECRET_KEY=ALTERE-ESTA-CHAVE-JWT-MUITO-FORTE-AQUI
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=7

# =============================================================================
# SOCIAL AUTH (opcional)
# =============================================================================
# Google OAuth
GOOGLE_OAUTH2_CLIENT_ID=seu-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=seu-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=seu-facebook-app-id
FACEBOOK_APP_SECRET=seu-facebook-app-secret

# =============================================================================
# TIMEZONE AND LOCALIZATION
# =============================================================================
TIME_ZONE=America/Sao_Paulo
LANGUAGE_CODE=pt-br
USE_I18N=True
USE_L10N=True
USE_TZ=True

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Cache timeout (em segundos)
CACHE_TIMEOUT=300

# Session settings
SESSION_COOKIE_AGE=86400
SESSION_SAVE_EVERY_REQUEST=False
SESSION_EXPIRE_AT_BROWSER_CLOSE=False

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_ENABLED=True
MONITORING_ENABLED=True

# =============================================================================
# NGINX PROXY MANAGER INTEGRATION
# =============================================================================
# Estas variáveis são usadas pelo Nginx Proxy Manager
VIRTUAL_HOST=seu-dominio.com
VIRTUAL_PORT=8000
LETSENCRYPT_HOST=seu-dominio.com
LETSENCRYPT_EMAIL=seu-email@dominio.com

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================
# Adicione suas configurações personalizadas aqui
# CUSTOM_SETTING=valor