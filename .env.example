# DJANGO CORE SETTINGS
SECRET_KEY=your-secret-key-here
DEBUG=True
DJANGO_ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1

# Configurações do Django
DJANGO_SETTINGS_MODULE=app_project.settings

# URLs e domínios
SITE_URL=http://localhost:8000
SITE_NAME=App

# DATABASE SETTINGS
DB_ENGINE=django.db.backends.postgresql
DB_NAME=saas_db
DB_USER=saas_user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Database Fallback Settings (usado quando DB_NAME não está definido)
DB_NAME_FALLBACK=saas_db
DB_USER_FALLBACK=postgres
DB_PASSWORD_FALLBACK=postgres
DB_HOST_FALLBACK=localhost
DB_PORT_FALLBACK=5438

# Para desenvolvimento local, você pode usar SQLite:
# DATABASE_URL=sqlite:///db.sqlite3

# Email Settings (opcional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Google OAuth2 (opcional)
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# Social Auth (opcional)
SOCIAL_AUTH_GOOGLE_OAUTH2_KEY=your-google-oauth2-key
SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET=your-google-oauth2-secret

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# AWS S3 (opcional - para arquivos estáticos em produção)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Stripe (opcional - para pagamentos)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Sentry (opcional - para monitoramento de erros)
SENTRY_DSN=your-sentry-dsn-url

# Configurações de Idioma e Fuso Horário
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
LANGUAGE_CODE_OVERRIDE=pt-br
TIME_ZONE_OVERRIDE=America/Sao_Paulo
USE_I18N=True
USE_TZ=True

# Configurações de Autenticação e URLs
LOGIN_URL=/
LOGIN_REDIRECT_URL=/
LOGOUT_REDIRECT_URL=/
LOGIN_REDIRECT_URL_OVERRIDE=/dashboard/
SITE_ID=1

# Configurações do Django Allauth
ACCOUNT_AUTHENTICATION_METHOD=email
ACCOUNT_EMAIL_REQUIRED=True
ACCOUNT_EMAIL_VERIFICATION=mandatory
ACCOUNT_USERNAME_REQUIRED=False
ACCOUNT_USER_MODEL_EMAIL_FIELD=email
ACCOUNT_LOGIN_ON_EMAIL_CONFIRMATION=True
ACCOUNT_LOGOUT_ON_GET=False
ACCOUNT_LOGIN_ATTEMPTS_LIMIT=5
ACCOUNT_LOGIN_ATTEMPTS_TIMEOUT=300
ACCOUNT_SESSION_REMEMBER=True
ACCOUNT_SIGNUP_PASSWORD_ENTER_TWICE=True
ACCOUNT_UNIQUE_EMAIL=True

# Configurações de Social Account
SOCIALACCOUNT_AUTO_SIGNUP=True
SOCIALACCOUNT_EMAIL_VERIFICATION=none
SOCIALACCOUNT_EMAIL_REQUIRED=False
SOCIALACCOUNT_QUERY_EMAIL=True
SOCIALACCOUNT_STORE_TOKENS=True
SOCIALACCOUNT_LOGIN_ON_GET=True

# Configurações do REST Framework
REST_FRAMEWORK_PAGE_SIZE=20

# Configurações JWT
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440
JWT_SECRET_KEY=${SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_AUTH_HEADER_TYPE=Bearer
JWT_AUTH_HEADER_NAME=HTTP_AUTHORIZATION
JWT_USER_ID_FIELD=id
JWT_USER_ID_CLAIM=user_id

# Configurações CORS
CORS_ALLOW_CREDENTIALS=True

# Configurações de Timezone do Celery
CELERY_TIMEZONE=UTC

# Configurações de Logging
LOG_LEVEL=INFO

# Configurações de Arquivos Estáticos e Media
STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# Configurações de Segurança (para produção)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Configurações do Superusuário (criado automaticamente na primeira migração)
SUPERUSER_EMAIL=admin@admin.com
SUPERUSER_USERNAME=admin
SUPERUSER_PASSWORD=admin123
SUPERUSER_FIRST_NAME=Super
SUPERUSER_LAST_NAME=Admin

# Configurações de Produção
# Descomente e configure para produção
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True